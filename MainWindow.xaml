<Window x:Class="M_A_G_A.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:M_A_G_A.Views"
        xmlns:vm="clr-namespace:M_A_G_A.ViewModels"
        Title="MAGA" Height="700" Width="1100"
        MinHeight="520" MinWidth="800"
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="ChromeButton" TargetType="Button">
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#1AFFFFFF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CloseButton" TargetType="Button" BasedOn="{StaticResource ChromeButton}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#CC0000"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="#0A0A0A" CornerRadius="14"
            BorderBrush="#2A2A2A" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="26" Color="Black" Opacity="0.7" ShadowDepth="4"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="44"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ─── Custom title bar ─── -->
            <Grid Grid.Row="0" x:Name="TitleBar" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
                  Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- App title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="16,0" VerticalAlignment="Center">
                    <TextBlock Text="M" FontSize="16" FontWeight="Black" Foreground="White"/>
                    <TextBlock Text="A" FontSize="16" FontWeight="Black" Foreground="#888888"/>
                    <TextBlock Text="G" FontSize="16" FontWeight="Black" Foreground="White"/>
                    <TextBlock Text="A" FontSize="16" FontWeight="Black" Foreground="#888888"/>
                    <Rectangle Width="1" Fill="#2A2A2A" Margin="14,6" VerticalAlignment="Stretch"/>
                    <TextBlock Text="Local Network Messenger" FontSize="11"
                               Foreground="#555555" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Window controls -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Style="{StaticResource ChromeButton}" Click="MinimizeClick" ToolTip="Свернуть">
                        <TextBlock Text="─" FontSize="14" Margin="0,0,0,4"/>
                    </Button>
                    <Button Style="{StaticResource ChromeButton}" Click="MaximizeClick" x:Name="MaxBtn" ToolTip="Развернуть">
                        <TextBlock Text="□" FontSize="14"/>
                    </Button>
                    <Button Style="{StaticResource CloseButton}" Click="CloseClick" ToolTip="Закрыть">
                        <TextBlock Text="✕" FontSize="12" FontWeight="SemiBold"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- ─── Content area ─── -->
            <Border Grid.Row="1" CornerRadius="0,0,14,14" ClipToBounds="True">
                <Grid>
                    <!-- Setup view -->
                    <views:SetupView DataContext="{Binding}"
                        Visibility="{Binding IsSetupDone, Converter={StaticResource BoolToVis}, ConverterParameter=invert}"/>

                    <!-- Messenger view -->
                    <views:MessengerView DataContext="{Binding}"
                        Visibility="{Binding IsSetupDone, Converter={StaticResource BoolToVis}}"/>
                </Grid>
            </Border>

            <!-- Resize grip -->
            <ResizeGrip Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                        Width="16" Height="16" Opacity="0.3"/>
        </Grid>
    </Border>
</Window>

